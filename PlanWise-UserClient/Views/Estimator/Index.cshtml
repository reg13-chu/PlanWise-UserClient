@model PlanWise_UserClient.Models.EstimatorViewModel

@{
    ViewData["Title"] = "Budget Estimator";
    Layout = "_Layout";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Afacad:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #FFF2F2;
            color: #2D336B;
            overflow-x: hidden;
            margin-right: 15%;
        }

        h2 {
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        form {
            max-width: 400px;
            margin: 0 auto 30px auto;
            padding: 20px;
            background-color: #F9F9F9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        select,
        input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #2D336B;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #1e244f;
            }

        table {
            margin: 0 auto;
            width: 80%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th,
        td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        

        th {
            background-color: #2D336B;
            color: white;
        }

        h3 {
            text-align: center;
            margin-top: 40px;
        }

        .total-budget {
            text-align: center;
            font-size: 20px;
            margin-top: 20px;
            color: #2D336B;
            font-weight: bold;
        }

        .btn-book-event {
            background-color: #2D336B;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 6px;
            text-decoration: none;
            font-family: 'Afacad', sans-serif;
            transition: background-color 0.3s ease;
        }

            .btn-book-event:hover {
                background-color: #1f254a;
            }

    </style>
</head>
<h2>Budget Estimator</h2>

<form asp-action="Index" method="post">
    <label>Event Type:</label>
    <select asp-for="EventType" required>
        <option value="">-- Select Event --</option>
        <option value="Wedding">Wedding</option>
        <option value="Birthday">Birthday</option>
        <option value="Christening">Christening</option>
    </select>

    <br />

    <label>Total Budget (₱):</label>
    <input asp-for="TotalBudget" type="number" required min="0" />

    <br />

    <label for="NumberOfGuests">Number of Guests</label>
    <input asp-for="NumberOfGuests" type="number" min="1" class="form-control" />
    <button type="submit">Estimate</button>
</form> 

@if (!ViewData.ModelState.IsValid)
{
    <div style="color: red; text-align: center; margin-bottom: 10px;">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}


@if (Model.CategoryBreakdown?.Count > 0)
{
    <h3>Breakdown for @Model.EventType</h3>
    <p class="total-budget">
        Total Budget: ₱@Model.TotalBudget.ToString("N2") <br />
        Guests: @Model.NumberOfGuests
    </p>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Category</th>
                <th>Amount (₱)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryBreakdown)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div style="text-align: center; margin-top: 30px;">
        <a asp-controller="Booking"
           asp-action="Index"
           asp-route-eventType="@Model.EventType"
           asp-route-budget="@Model.TotalBudget"
           asp-route-numberOfGuests="@Model.NumberOfGuests"
           class="btn-book-event">
            Book an Event
        </a>
    </div>
}

